<UserControl
    x:Class="SDProfileManager.Views.PageStripView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="8">
        <Button x:Name="FolderBackButton"
                Width="54"
                Height="32"
                Padding="0"
                Background="#3D000000"
                BorderBrush="#14FFFFFF"
                BorderThickness="1"
                CornerRadius="16">
            <FontIcon x:Name="FolderBackIcon"
                      Glyph="&#xE72B;"
                      FontSize="12"
                      Foreground="#85FFFFFF"/>
        </Button>

        <!-- Page buttons container -->
        <Border Background="#3D000000"
                BorderBrush="#1AFFFFFF"
                BorderThickness="1"
                CornerRadius="16"
                Padding="8,3">
            <StackPanel x:Name="PageButtonsPanel"
                        Orientation="Horizontal"
                        Spacing="4"/>
        </Border>
    </StackPanel>
</UserControl>
